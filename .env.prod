# Production Environment Configuration
# This file contains production-specific settings

# MCP Server Configuration
OPENROUTER_API_KEY=${OPENROUTER_API_KEY:-}

# PostgreSQL Connection (Production)
DATABASE_URL_STRING=${DATABASE_URL_STRING:-}

# Production-specific settings
LOG_LEVEL=info
NODE_ENV=production
PROMETHEUS_ENABLED=true
GRAFANA_ENABLED=false

# Resource limits (strict for production)
CONTEXT7_CPU_LIMIT=0.5
CONTEXT7_MEMORY_LIMIT=512M
PUPPETEER_CPU_LIMIT=1.0
PUPPETEER_MEMORY_LIMIT=1G

# Production networking (internal ports only)
PROMETHEUS_PORT=9090
GATEWAY_PORT=8811

# Security settings
DISABLE_SWAGGER=true
ENABLE_SSL=true
SSL_CERT_PATH=/etc/ssl/certs
SSL_KEY_PATH=/etc/ssl/private