# Development Environment Configuration
# This file contains development-specific settings

# MCP Server Configuration
OPENROUTER_API_KEY=your_dev_openrouter_api_key_here

# PostgreSQL Connection (Development)
DATABASE_URL_STRING=postgresql://postgres:postgres@localhost:5432/mcp_dev

# Development-specific settings
LOG_LEVEL=debug
NODE_ENV=development
PROMETHEUS_ENABLED=true
GRAFANA_ENABLED=true

# Resource limits (relaxed for development)
CONTEXT7_CPU_LIMIT=1.0
CONTEXT7_MEMORY_LIMIT=1G
PUPPETEER_CPU_LIMIT=2.0
PUPPETEER_MEMORY_LIMIT=2G

# Development networking
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GATEWAY_PORT=8812