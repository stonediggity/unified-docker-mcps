FROM python:3.12-slim

RUN apt-get update && apt-get install -y \
    git \
    curl \
    bash \
    ca-certificates \
    && rm -rf /var/lib/apt/lists/*

# Create non-root user
RUN useradd -m -s /bin/bash mcpuser

WORKDIR /app

# Clone the Zen MCP server repository
RUN git clone https://github.com/BeehiveInnovations/zen-mcp-server.git .

# Change ownership to mcpuser
RUN chown -R mcpuser:mcpuser /app

USER mcpuser

# Set environment variable for OpenRouter key
ENV OPENROUTER_API_KEY=""

# Make run-server.sh executable
RUN chmod +x ./run-server.sh

# Run the Zen server
CMD ["./run-server.sh"]